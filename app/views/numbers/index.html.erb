
<div>
<h1>Hello Great number Game</h1>
<h4>I am thinking of a number between 1 and 100</h4>
<h4>Take a guess!</h4>
<form action="/answer" method="post"> 
<input type="hidden" value="<%= form_authenticity_token%>" name="authenticity_token"/>
<input type="text" name="number">
<input id="green" type="submit" value="Submit" name="Guess">
</form>

<%if flash[:status]== true %>
<div>
	<p><%= flash[:message]%></p>
</div>

<%elsif flash[:status]== false %>
<div class="red">
	<p><%= flash[:message]%></p>
</div>

<%end%>


</div>